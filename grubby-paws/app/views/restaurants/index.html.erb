<h1 id = "main-text">ALL RESTAURANTS</h1>
<h4 id = "main-text2">CHOOSE YOUR GRUB!</h4>

<h2 class="current-category"><%= params[:category]%></h2>

<% if @restaurants.count == 0 %>
  <h1>There are no restaurants currently in this category</h1>
  <% else %>

<div class = "row">

<% @restaurants.each do |restaurant| %>
<div class = "col-md-3">
  <a href="/restaurants/<%= restaurant.id %>">
    <%= image_tag restaurant.restaurant_img.url(:restaurant_index), class: "restaurant" %>

  </a>
  <div class ="title"><%= restaurant.name %></div>
</div>
  <% end %>
</div>
<% end %>
