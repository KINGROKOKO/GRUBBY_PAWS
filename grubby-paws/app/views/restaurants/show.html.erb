<div class = "row">
  <div class = "col-md-4">
    <%= image_tag @restaurant.restaurant_img.url(:restaurant_show), class: "restauarnt-show" %>

  </div>

  <div class = "col-md-8">
    <h2><%= @restaurant.name %></h2>
    <h4><%= @restaurant.category.name %></h4>
    <h3><%= @restaurant.location %></h3>
    <p><%= @restaurant.description %></p>
  </div>
</div>

<div class = "row">
  <div class ="col-md-4">
<div>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
</div>
  </div>
</div>

<%= link_to "BACK", root_path%>

<% if user_signed_in? %>
  <% if @restaurant.user_id == current_user.id %>
    <%= link_to "DELETE", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to "EDIT", edit_restaurant_path(@restaurant)%>
  <%end%>
<% end %>
